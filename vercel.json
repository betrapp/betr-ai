{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/cron/route.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/cron", "methods": ["POST"], "dest": "/api/cron/route.ts" },
    { "src": "/api/cron/route.ts", "dest": "/api/cron/route.ts" },
    { "src": "/(.*)", "dest": "/api/index.ts" }
  ],
  "crons": [
    {
      "path": "/api/cron/route.ts",
      "schedule": "* * * * *"
    }
  ]
}
