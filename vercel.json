{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/cron", "methods": ["POST"], "dest": "/api/cron.ts" },
    { "src": "/(.*)", "dest": "/api/index.ts" }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 0 * * *"
    }
  ]
}
